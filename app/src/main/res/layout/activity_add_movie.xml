<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_margin="8dp"
        android:radius="12dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Movie"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:paddingBottom="24dp" />

        <!-- Movie Poster Thumbnail -->
        <EditText
            android:id="@+id/thumbnailUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Thumbnail URL"
            android:inputType="textUri"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:textColorHint="#9E9E9E"
            android:textColor="#212121"
            android:elevation="2dp" />

        <!-- Movie Title -->
        <EditText
            android:id="@+id/movieTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Movie Title"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:textColorHint="#9E9E9E"
            android:textColor="#212121"
            android:elevation="2dp" />

        <!-- Studio -->
        <EditText
            android:id="@+id/studioInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Studio Name"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:textColorHint="#9E9E9E"
            android:textColor="#212121"
            android:elevation="2dp" />

        <!-- Critics Rating -->
        <EditText
            android:id="@+id/criticsRatingInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Critics Rating (1-10)"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:textColorHint="#9E9E9E"
            android:textColor="#212121"
            android:elevation="2dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveMovieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Movie"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelMovieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18sp"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
